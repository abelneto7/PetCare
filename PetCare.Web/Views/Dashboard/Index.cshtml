@model PetCare.Web.Controllers.DashboardController.DashboardVm

@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h3 class="mb-1 text-dark">Dashboard</h3>
        <p class="text-muted mb-0">Visão geral da sua clínica veterinária</p>
    </div>

    <div>
        <a class="btn btn-primary d-flex align-items-center gap-2" asp-controller="Vacinas" asp-action="Create">
            <span>+ Registrar Vacina</span>
        </a>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-12 col-md-4">
        <div class="card h-100">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-uppercase text-muted small fw-bold mb-1">Tutores</p>
                        <h2 class="mb-0">@Model.TotalTutores</h2>
                    </div>
                    <div class="text-secondary fs-1 opacity-25">
                        &#128101;
                    </div>
                </div>
                <div class="mt-3">
                    <a class="text-decoration-none small fw-semibold" asp-controller="Tutores" asp-action="Index">Ver todos &rarr;</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-4">
        <div class="card h-100">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-uppercase text-muted small fw-bold mb-1">Pets</p>
                        <h2 class="mb-0">@Model.TotalPets</h2>
                    </div>
                    <div class="text-secondary fs-1 opacity-25">
                        &#128054;
                    </div>
                </div>
                <div class="mt-3">
                    <a class="text-decoration-none small fw-semibold" asp-controller="Pets" asp-action="Index">Ver todos &rarr;</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-4">
        <div class="card h-100 border-start border-4 border-danger">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-uppercase text-danger small fw-bold mb-1">Atrasadas</p>
                        <h2 class="mb-0 text-danger">@Model.TotalVacinasAtrasadas</h2>
                    </div>
                    <div class="text-danger fs-1 opacity-25">
                        &#128137;
                    </div>
                </div>
                <div class="mt-3">
                    <small class="text-muted">Requer atenção imediata</small>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-white py-3 border-bottom">
        <div class="d-flex align-items-center justify-content-between">
            <h5 class="mb-0 text-dark">Vacinas Atrasadas</h5>
            <small class="text-muted">Próximas doses vencidas</small>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.VacinasAtrasadas.Count == 0)
        {
            <div class="p-5 text-center text-muted">
                <div class="fs-1 mb-3">✅</div>
                <p class="mb-0">Nenhuma vacina atrasada no momento. Bom trabalho!</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Pet / Tutor</th>
                            <th>Vacina</th>
                            <th>Vencimento</th>
                            <th>Status</th>
                            <th class="text-end pe-4">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.VacinasAtrasadas)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold text-dark">@item.PetNome</div>
                                    <div class="small text-muted">@item.TutorNome</div>
                                </td>
                                <td>@item.NomeVacina</td>
                                <td>
                                    <span class="text-danger fw-semibold">@item.ProximaDose.ToString("dd/MM/yyyy")</span>
                                </td>
                                <td>
                                    <span class="badge bg-danger bg-opacity-10 text-danger">
                                        @item.DiasAtraso dias atraso
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <a class="btn btn-sm btn-outline-secondary" href="/pets/@item.PetId/vacinas">Histórico</a>
                                    <a class="btn btn-sm btn-primary" asp-controller="Vacinas" asp-action="Create" asp-route-petId="@item.PetId">Atualizar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
