@{
    ViewData["Title"] = "Criar conta";
}

<div class="min-vh-100 d-flex align-items-center bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-7 col-lg-5">

                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4 p-md-5">

                        <div class="d-flex align-items-center gap-2 mb-2">
                            <span class="fs-4">🐾</span>
                            <div>
                                <div class="fw-semibold fs-4 lh-1">PetCare+</div>
                                <small class="text-muted">Criar acesso administrativo</small>
                            </div>
                        </div>

                        <hr class="my-4" />

                        @if (ViewBag.Erro != null)
                        {
                        <div class="alert alert-danger py-2" role="alert">
                            @ViewBag.Erro
                        </div>
                        }

                        <form method="post" class="needs-validation" novalidate>
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                <label class="form-label">Nome</label>
                                <input name="nome" class="form-control" placeholder="Seu nome" required autofocus />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input name="email" type="email" class="form-control" placeholder="seuemail@dominio.com" required />
                                <div class="form-text">O email será seu login e deve ser único.</div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Senha</label>
                                <input name="senha" type="password" class="form-control" placeholder="Crie uma senha" required />
                                <div class="form-text">Sem regras de complexidade, mas será armazenada com hash.</div>
                            </div>

                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-dark">Cadastrar</button>
                                <a class="btn btn-outline-secondary" href="/Auth/Login">Já tenho conta</a>
                            </div>
                        </form>

                        <div class="text-center mt-4">
                            <small class="text-muted">
                                PetCare+ • Cadastro de acesso
                            </small>
                        </div>

                    </div>
                </div>

                <div class="text-center mt-3">
                    <small class="text-muted">
                        Ao criar a conta, você poderá acessar o painel do sistema.
                    </small>
                </div>

            </div>
        </div>
    </div>
</div>
