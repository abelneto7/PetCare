@model PetCare.Web.Models.Pet
@using PetCare.Web.Helpers
@{
    ViewData["Title"] = "Excluir pet";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h3 class="mb-1">Excluir pet</h3>
        <div class="text-muted">Confirme a exclusão</div>
    </div>
    <a class="btn btn-outline-secondary" asp-action="Index">Voltar</a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">

        <div class="alert alert-warning d-flex align-items-start gap-2 mb-4" role="alert">
            <div class="fs-5">⚠️</div>
            <div>
                <div class="fw-semibold">Atenção</div>
                <div>
                    Você tem certeza que deseja excluir <strong>@Model.Nome</strong>?
                    <span class="text-muted">Esta ação não pode ser desfeita.</span>
                </div>
            </div>
        </div>

        <div class="mb-2">
            <span class="badge text-bg-light">ID: @Model.Id</span>
        </div>

        <dl class="row mb-4">
            <dt class="col-sm-3 text-muted">Espécie</dt>
            <dd class="col-sm-9">@Model.Especie.ToDisplay()</dd>

            <dt class="col-sm-3 text-muted">Raça</dt>
            <dd class="col-sm-9">@((string.IsNullOrWhiteSpace(Model.Raca)) ? "-" : Model.Raca)</dd>

            <dt class="col-sm-3 text-muted">Tutor</dt>
            <dd class="col-sm-9">@Model.Tutor?.Nome</dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />

            <div class="d-grid d-md-flex gap-2">
                <button type="submit" class="btn btn-danger">Excluir</button>
                <a class="btn btn-outline-secondary" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>
